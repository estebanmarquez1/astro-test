---
import Layout from '../../layouts/Layout.astro';
const posts = await Astro.glob('./posts/*.md'); //Funci√≥n que carga archivos desde local. 
---



<Layout title="Blog" metaDescription="Este es un blog usando Astro">
    
    <h1>Bienvenido a mi Blog</h1>
    <section class="post__container">

        {
            posts.map(post => {
                return <a href={post.url}>{post.frontmatter.title}</a>
            })
        }
        </section>
</Layout>

<style>
    .post__container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        & a {
            text-align: center;
            text-decoration: none;
            color: #ffffff;
            width: 20rem;
            padding: 3rem;
            border: 3px solid #f86969;
            border-radius: 2rem;
        }
    }
</style>