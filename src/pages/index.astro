---
import Layout from "../layouts/Layout.astro";
//Esto no se ejecuta en el navegador, sólo es para producción.
const title = "Bienvenidos a mi web";
const habits = ["Programar", "Escuchar música", "Gimnasio", "Leer", "Estudiar"];
const isActive = true;
import Button from "../components/Button.jsx";
import { ToastContainer} from 'react-toastify';
import 'react-toastify/dist/ReactToastify.css';
---
<Layout title="Index Astro" metaDescription = "Esta es una página inicial para un proyecto de Astro">

	<h1>{title}</h1>
	
	{isActive && <h1>El usuario está activo</h1>}
	<!-- {isActive ? <h1>El usuario está activo</h1> : ''} -->
	<ul>
		{
			habits.map((habit) => (
				<li>
					<h3>{habit}</h3>
					<button>Like</button>
					</li>
					))
				}
</ul>


	<Button client:visible/> 
	
</Layout>